  </head>
  <body>
    <slot />
    <script>
      import { PowerGlitch } from "powerglitch";

      PowerGlitch.glitch(".page-name", {
        playMode: "hover",
      });

      PowerGlitch.glitch(".page-socials a svg", {
        playMode: "hover",
        shake: {
          amplitudeX: -1.2,
        },
      });
    </script>
  </body>
